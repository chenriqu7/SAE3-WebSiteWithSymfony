<div id="crud-modal" class="absolute p-4 w-full place-self-center max-w-md max-h-full content-center z-50 hidden">
    <!-- Modal container -->
    <div class="relative bg-white rounded-lg shadow dark:bg-gray-700">

        <!-- Modal header -->
        <div class="flex items-center justify-between p-4 md:p-5 border-b rounded-t dark:border-gray-600">
            <!-- Title of the modal -->
            <h3 id="RoomFormTitle" class="text-lg font-semibold text-gray-900 dark:text-white">
                Ajout d'une nouvelle salle
            </h3>
            <!-- Close button -->
            <button type="button" class="text-gray-400 bg-transparent hover:bg-gray-200 hover:text-gray-900 rounded-lg text-sm w-8 h-8 ms-auto inline-flex justify-center items-center dark:hover:bg-gray-600 dark:hover:text-white" id="modal-leave" data-modal-toggle="crud-modal">
                <!-- Close icon (X) -->
                <svg class="w-3 h-3" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 14 14">
                    <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m1 1 6 6m0 0 6 6M7 7l6-6M7 7l-6 6"/>
                </svg>
            </button>
        </div>

        <!-- Form content -->
        <div class="p-4 md:p-5">
            <!-- Form grid layout -->
            <div class="grid gap-4 mb-4 grid-cols-2">
                <div class="col-span-2 dark:text-white">
                    <!-- Form start -->
                    {{ form_start(form) }}
                    <div class="w-full px-3 mb-6 md:mb-0">
                        <div class="w-full p-2 space-y-4">
                            <!-- Form fields -->
                            {{ form_row(form.type, {
                                'attr': {
                                    'class': 'w-full p-3 border border-gray-300 rounded-md text-gray-900 bg-gray-50 dark:bg-gray-700 dark:text-white dark:border-gray-600'
                                }
                            }) }}
                            {{ form_row(form.number, {
                                'attr': {
                                    'class': 'w-full p-3 border border-gray-300 rounded-md text-gray-900 bg-gray-50 dark:bg-gray-700 dark:text-white dark:border-gray-600'
                                }
                            }) }}
                            {{ form_row(form.orientation, {
                                'attr': {
                                    'class': 'w-full p-3 border border-gray-300 rounded-md text-gray-900 bg-gray-50 dark:bg-gray-700 dark:text-white dark:border-gray-600'
                                }
                            }) }}
                            {{ form_row(form.nbWindow, {
                                'attr': {
                                    'class': 'w-full p-3 border border-gray-300 rounded-md text-gray-900 bg-gray-50 dark:bg-gray-700 dark:text-white dark:border-gray-600'
                                }
                            }) }}
                            {{ form_row(form.floor, {
                                'attr': {
                                    'class': 'w-full p-3 border border-gray-300 rounded-md text-gray-900 bg-gray-50 dark:bg-gray-700 dark:text-white dark:border-gray-600'
                                }
                            }) }}
                        </div>
                    </div>

                    <!-- Submit button -->
                    <button type="submit" class="text-black color6 hover:bg-slate-500 focus:ring-4 font-medium rounded-lg text-sm w-44 px-5 py-2.5 me-2 mb-2 focus:outline-none">
                        Valider
                    </button>
                    <!-- Form end -->
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
</div>
